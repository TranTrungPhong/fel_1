<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBackgroundLogin"
    android:orientation="vertical"
    android:padding="@dimen/padding_20">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_show_user_avatar"
            android:layout_width="@dimen/width_150"
            android:layout_height="@dimen/width_100"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="@dimen/margin_16"
            android:scaleType="fitCenter"
            android:src="@android:drawable/ic_menu_gallery" />

        <LinearLayout
            android:layout_toRightOf="@id/image_show_user_avatar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/text_show_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_40"
                    android:gravity="center"
                    android:text="@string/name_user"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_20" />

                <TextView
                    android:id="@+id/text_show_user_email"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_30"
                    android:gravity="center"
                    android:text="@string/email_user"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_15" />

                <Button
                    android:id="@+id/button_update_show_user"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_30"
                    android:background="@drawable/button_background"
                    android:text="@string/update"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_10" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/button_sign_out_show_user"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_30"
                    android:layout_weight="1"
                    android:background="@drawable/button_background"
                    android:text="@string/sign_out"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="@dimen/fab_margin"
                    android:textSize="@dimen/text_size_10" />

                <Button
                    android:id="@+id/button_wordlist_show_user"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_30"
                    android:layout_marginLeft="@dimen/fab_margin"
                    android:layout_weight="1"
                    android:background="@drawable/button_background"
                    android:text="@string/word_list"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_10" />

                <Button
                    android:id="@+id/button_show_activities"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_30"
                    android:layout_marginLeft="@dimen/fab_margin"
                    android:layout_weight="1"
                    android:background="@drawable/button_background"
                    android:text="@string/activities"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_10" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_40"
        android:gravity="center_vertical"
        android:text="@string/lession_learned"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_20" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/listview_lesson_learned"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_recycle"
        android:padding="@dimen/padding_20" />
</LinearLayout>