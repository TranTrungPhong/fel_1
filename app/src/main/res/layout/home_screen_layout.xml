<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundLogin"
    android:orientation="vertical"
    android:padding="@dimen/padding_20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_30"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:id="@+id/button_sign_out_show_user"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_light"
            android:text="@string/sign_out"
            android:textSize="@dimen/text_size_10" />

        <Button
            android:id="@+id/button_wordlist_show_user"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_light"
            android:text="@string/word_list"
            android:textSize="@dimen/text_size_10" />

        <Button
            android:id="@+id/button_Lesson_show_user"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_light"
            android:text="@string/lesson"
            android:textSize="@dimen/text_size_10" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_show_user_avatar"
            android:layout_width="@dimen/width_150"
            android:layout_height="@dimen/width_150"
            android:layout_alignParentLeft="true"
            android:background="@drawable/ic_icon_fels" />

        <TextView
            android:id="@+id/text_show_user_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_50"
            android:layout_toRightOf="@id/image_show_user_avatar"
            android:gravity="center_vertical"
            android:text="@string/name_user"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_20" />

        <TextView
            android:id="@+id/text_show_user_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_40"
            android:layout_below="@id/text_show_user_name"
            android:layout_toRightOf="@id/image_show_user_avatar"
            android:gravity="center_vertical"
            android:text="@string/email_user"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_10" />

        <Button
            android:id="@+id/button_update_show_user"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_30"
            android:layout_alignParentRight="true"
            android:layout_below="@id/text_show_user_email"
            android:background="@android:color/holo_blue_light"
            android:text="@string/update"
            android:textSize="@dimen/text_size_10" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_40"
        android:gravity="center_vertical"
        android:text="@string/lession_learned"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_20" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/listview_lesson_learned"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>