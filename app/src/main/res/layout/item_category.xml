<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.AppCompat.Button.Borderless"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/cardview_margin_small"
    android:layout_marginRight="@dimen/cardview_margin_small"
    android:orientation="vertical"
    android:padding="@dimen/margin_10"
    app:cardCornerRadius="@dimen/cardview_default_radius"
    app:elevation="@dimen/cardview_default_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_category_height"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_item_category_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding_20"
            android:text="@string/id"
            android:textColor="@color/colorTextDark"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/text_item_category_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:drawableRight="@drawable/ic_chevron_right"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:paddingLeft="@dimen/drawable_padding"
            android:text="@string/category_name"
            android:textColor="@color/colorTextDark"
            android:textSize="@dimen/text_size_15" />
    </LinearLayout>
</android.support.v7.widget.CardView>
