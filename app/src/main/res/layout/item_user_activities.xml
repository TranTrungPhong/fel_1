<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_user_activity_height"
    android:layout_margin="@dimen/cardview_margin_small"
    android:padding="@dimen/cardview_margin_small"
    app:cardCornerRadius="@dimen/cardview_default_radius"
    app:elevation="@dimen/cardview_default_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:id="@+id/text_item_user_activities_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding_20"
            android:text="@string/id"
            android:textColor="@color/colorTextDark"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/text_item_user_activities_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="3"
            android:paddingLeft="@dimen/padding_20"
            android:text="@string/category_name"
            android:textColor="@color/colorTextDark"
            android:textSize="@dimen/text_size_15" />
    </LinearLayout>
</android.support.v7.widget.CardView>
