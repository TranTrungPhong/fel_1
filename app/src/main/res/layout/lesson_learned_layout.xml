<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_all"
    android:orientation="vertical"
    tools:context="com.framgia.fel1.activity.LearnedLessonActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_lesson"
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        android:background="@color/colorPrimary"
        app:theme="@style/Base.V7.Theme.AppCompat">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/lesson"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_20"/>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_marginTop="@dimen/margin_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button_word_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:text="@string/word_list"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/button_create_lesson"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:text="@string/create_lesson"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <ScrollView
        android:layout_marginTop="@dimen/margin_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/listview_words"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_recycle"
            android:padding="@dimen/padding_20" />
    </ScrollView>
</LinearLayout>