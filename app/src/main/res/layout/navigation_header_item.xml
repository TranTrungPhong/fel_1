<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/nav_drawer_width"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/bg_nav_header"
    android:paddingLeft="@dimen/padding_20"
    android:paddingRight="@dimen/padding_20"
    android:paddingTop="@dimen/padding_20">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_show_user_avatar"
        android:layout_width="@dimen/height_70"
        android:layout_height="@dimen/height_70"
        android:layout_alignParentLeft="true"
        android:layout_margin="@dimen/margin_16"
        android:scaleType="centerCrop"
        android:src="@android:drawable/ic_menu_gallery" />

    <TextView
        android:id="@+id/text_show_user_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@dimen/margin_10"
        android:gravity="center_vertical"
        android:text="@string/email_user"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_15" />

    <TextView
        android:id="@+id/text_show_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/text_show_user_email"
        android:layout_marginBottom="@dimen/cardview_margin_small"
        android:gravity="center_vertical"
        android:text="@string/name_user"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_20" />

</RelativeLayout>
